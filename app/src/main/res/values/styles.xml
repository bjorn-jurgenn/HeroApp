<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/colorLight</item>
        <item name="itemTextColor">@color/colorMenuItem</item>
        <item name="itemIconTint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomButtonCommon" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomButton" parent="CustomButtonCommon">
        <item name="android:elevation">8dp</item>
    </style>


    <style name="ClearButtonCommon" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_clean</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ClearButton" parent="ClearButtonCommon">
        <item name="android:elevation">8dp</item>
    </style>

    <style name="AppTheme.ThirdDialog">
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="colorControlNormal">@color/colorLight</item>
        <item name="itemTextColor">@color/colorMenuItem</item>
        <item name="itemIconTint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarStyle">
        <item name="fontFamily">@font/armata</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="SpaceXTitle">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/armata</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpaceXCategory">
        <item name="fontFamily">@font/armata</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
